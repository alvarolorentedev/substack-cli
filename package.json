{
  "name": "substack-cli",
  "version": "0.0.1",
  "description": "cli for substack cloud",
  "main": "index.ts",
  "contributors": [
    {
      "name": "alvaro lorente",
      "email": "github@alvarolorente.dev"
    }
  ],
  "scripts": {
    "prepare": "husky install && npm run build",
    "build": "npm run build:tsc && npm run build:pkg",
    "build:tsc": "tsc",
    "build:pkg": "cp package.json bin/package.json",
    "start": "ts-node .",    
    "format": "prettier --write \"**/*.ts\" && eslint --fix src/**/*.ts",
    "lint": "eslint",
    "test": "npm run format && npm run lint && jest test",
    "test:dev": "jest --watchAll test",
    "test:cov": "npm run format && npm run lint && jest --coverage",
    "push": "npm run test && git push",
    "deploy:major": "npm version --major",
    "deploy:minor": "npm version --minor",
    "deploy:patch": "npm version --patch",
    "deploy:push": "git push && git push --tags",
    "preversion": "npm test",
    "lint-staged": "lint-staged",
    "commit": "git add . && cz"
  },
  "bin": {
    "substack": "./bin/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/node": "^18.15.11",
    "@types/react": "^17.0.2",
    "axios": "^1.6.0",
    "commander": "^10.0.0",
    "configstore": "^3.1.5",
    "form-data": "^4.0.0",
    "ignore": "^5.2.4",
    "ink": "^3.2.0",
    "ink-spinner": "^4.0.3",
    "ink-table": "^3.0.0",
    "parse-gitignore": "^2.0.0",
    "react": "^17.0.2",
    "zip-dir": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "cz-format-extension": "1.5.1",
    "eslint": "8.36.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.0",
    "prettier": "2.8.7",
    "ts-jest": "29.0.5",
    "typescript": "5.0.2",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "lib/**/*.{ts,tsx}"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-format-extension"
    }
  }
}
